# 修飾キーをctrl + t
escape ^Tt

# 最終行のウィンドウ一覧を表示
hardstatus alwayslastline "%w"

# 最終行に時刻を表示
hardstatus alwayslastline "[%02c] %`%-w%{=b bw}%n %t%{-}%+w"

# スタートメッセージを表示させない
startup_message off

# ビープを鳴らさない
vbell off

# shellのウィンドウタイトル
shelltitle "$ |bash"

# screenが開いた各ウィンドウの環境変数$TERM
term ansi 

caption always ”%{= wk} %-w%{=bu dr}%n %t%{-}%+w %= %{=b wb}%y/%m/%d(%D) %{=b wb}%c”
